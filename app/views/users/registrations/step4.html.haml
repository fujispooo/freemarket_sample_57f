
.sign-up__header
  =link_to root_path do
    =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863353983", alt: "mercari", class: "sign-up__header--image"
  .step_bar
    %ul.cp_stepflow01
      %li.completed
        会員情報
        %span.bubble
      %li.completed
        電話番号認証
        %span.bubble
      %li.active_step
        お届け先住所入力
        %span.bubble
      %li
        支払い方法
        %span.bubble
      %li
        完了
        %span.bubble>
.sign-up__main
  = form_for @user, url: credit_path, method: :get do |f|
    = f.fields_for :address do |a|
      .sign-up__main__header 
        %h2.sign-up__main__header__main-title 発送・お届け先住所入力
      .sign-up__main__body
        .sign-up__main__body__forms-container
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "郵便番号"
            = a.label :name, "必須", class: "write-must"
            .sign-up__main__body__forms-container__form-box__inner
              = a.text_field :post_number, class: "normal-form", required: "true",placeholder: "例) 123-4567"
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "都道府県"
            = a.label :name, "必須", class: "write-must"
            .sign-up__main__body__forms-container__form-box__inner
              = a.collection_select :prefecture_id, Prefecture.all, :id, :name, class: "normal-form"
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "市区町村"
            = a.label :name, "必須", class: "write-must"
            .sign-up__main__body__forms-container__form-box__inner
              = a.text_field :city, class: "normal-form", required: "true",placeholder: "例) 世田谷区若林"
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "番地"
            = a.label :name, "必須", class: "write-must"
            .sign-up__main__body__forms-container__form-box__inner
              = a.text_field :address, class: "normal-form", required: "true",placeholder: "例) ３-５-９８"
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "建物名"
            = a.label :name, "任意", class: "write-optional"
            .sign-up__main__body__forms-container__form-box__inner
              = a.text_field :building_name, class: "normal-form",placeholder: "例) 青山ハウス"
          .sign-up__main__body__forms-container__form-box
            = a.label :name, "電話番号"
            = a.label :name, "任意", class: "write-optional"
            .sign-up__main__body__forms-container__form-box__inner
              = a.telephone_field :building_tel, class: "normal-form",placeholder: "例) 090-1234-5678"
          .sign-up__main__body__forms-container__form-box
            = a.submit "次へ進む", class: "form__sent-btn"

