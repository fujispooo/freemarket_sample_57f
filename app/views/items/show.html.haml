= render 'modules/header'

%section.item-box-container.l-single-container
  %h1.item-name 
    = @item.name
  .item-main-content
    .item-photo
      .owl-carousel
        .owl-item-inner
          = image_tag @item.item_images.first.image_url,class: "main_image",alt: "商品画像", size: "225x300"
        .owl-item-inner-sub-box
          .owl-item-inner-sub


    .item-price-box.text-center.visible-sp
      %span.item-price.bold
        = @item.price
      %span.item-tax (税込)
      %span.item-shipping-fee 送料込み

    .visible-sp
    .item-btn-float-area
      %a.item-btn-client
    .item-detail-table
      .tr
        .th 出品者
        .td
          = @item.user.nickname
          %div
            .item-user
              .item-user-ratings1
                = image_tag 'good.svg'
                %span 149
              .item-user-ratings2
                = image_tag 'normal.svg'
                %span 0
              .item-user-ratings3
                = image_tag 'bad.svg'
                %span 0
      .tr
        .th カテゴリー
        .td-sub
          = @item.category.name
          = link_to  '靴',class:'item-detail-table-sub-category'
          = link_to 'スニーカー',class:'item-detail-table-sub-sub-category'
      .tr
        .th ブランド
        .td
          = link_to 'バンズ'
      .tr
        .th 商品のサイズ
        .td 27cm
      .tr
        .th 商品の状態
        .td
          =@item.item_state.item_state
      .tr
        .th 配送料の負担
        .td
          = @item.delivery_fee.delivery_fee
      .tr
        .th 配送の方法
        .td クロネコヤマト
      .tr
        .th 配送元地域
        .td 東京
      .tr
        .th 発送日の目安
        .td
          = @item.delivery_day.delivery_day
  .item-price-box.text-center
    %span.item-price.bold
      = @item.price
    %span.item-tax 円(税込)
    %span.item-shipping-fee 送料込み

    -# 条件分岐
  - if @item.user_id == current_user.id
    .text-center

      .item-buy-btn
        = link_to '商品を削除する', item_path(@item),method: :delete

  - else
    .text-center
      .sales-point-message
        P200 をお持ちです
      .item-buy-btn
        = link_to '購入画面に進む', purchase_cards_path
  .item-description.f14
    %p.item-description-inner
      = @item.description
  .item-button-container
    .item-button-left
      %button.item-button.item-button-like{"data-ga" => "element", "data-ga-category" => "LIKE", "data-ga-label" => "like!", "data-id" => "m11168273272", "data-toggle" => "like", :name => "like!", :type => "button"}
        %i.icon-like-border
        %span いいね!
        %span.fade-in-down{"data-num" => "like"} 21
      %a.item-button.item-button-report
        %i.icon-flag
        %span 不適切な商品の報告
      %input{:name => "like_add_url", :type => "hidden", :value => "https://www.mercari.com/jp/like/add/m11168273272/?_s=U2FsdGVkX1_cdkm5jqi1IF0GNlqYcWpX58J75jS9s1YW9x1h1_gGRyl-ME-aqWFC6FHgSaR87aw7uL9zNqh1h6j3B84_goa3I5BbQKtRJcYWT5XBu_mFg8RsiRQWWj4C"}/
      %input{:name => "like_del_url", :type => "hidden", :value => "https://www.mercari.com/jp/like/delete/m11168273272/?_s=U2FsdGVkX1_cdkm5jqi1IF0GNlqYcWpX58J75jS9s1YW9x1h1_gGRyl-ME-aqWFC6FHgSaR87aw7uL9zNqh1h6j3B84_goa3I5BbQKtRJcYWT5XBu_mFg8RsiRQWWj4C"}/
      %input{:name => "__csrf_value", :type => "hidden", :value => "3c4f11465244650df31f45c7ae9fd640b5106547cef796d0b550904a6a9caef0e0ff6bfb18a9df809256bf3b41457777a9610f294078b4f08ac73e31ab382d587"}/
    .item-button-right
      %a{:href => "https://www.mercari.com/jp/safe/description/", :target => "_blank"}
        %i.icon-lock
        %span あんしん・あんぜんへの取り組み
  .message-content
    .message-form
      相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
    .textarea-default
    %button.message-submit.btn-default.btn-gray{:type => "submit"}
      %span コメントする

    %ul.nav-item-link-prev-next.clearfix
      %li.nav-item-link-prev
        %i.fa.fa-arrow-left
        ショートパンツ ベージュ
      %li.nav-item-link-next
        %i.fa.fa-arrow-right
        ポケモン ぬいぐるみ
        %i.fa.fa-arrow-right
  .item-social-media-box
  .text-center
    .fb-save{"data-uri" => "product://113299479059860/m46057519022"}
  %ul.social-media-box
    = fa_icon 'facebook-square', class: "contents-icon"
    = fa_icon 'twitter-square', class: "contents-icon"
    = fa_icon 'pinterest', class: "contents-icon"
  %h2.items-box-head
    = @item.user.nickname
    さんの出品
  .items-box-content1
  %h2.items-box-head_sub
    その他のアイテム
  .items-box-content1
    -# - @user.items.each do |item|
    .items-box
      .img-photo
        = image_tag @item.item_images.first.image_url,class: "main_image",alt: "商品画像", size: "225x300"
    .items-box
      .img-photo
    .items-box
      .img-photo
  .items-box-content2
    .items-box
      .img-photo
    .items-box
      .img-photo
    .items-box
      .img-photo

= render "modules/footer"