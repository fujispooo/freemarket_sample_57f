
.sign-up__header
  =link_to root_path do
    =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863353983", alt: "mercari", class: "sign-up__header--image"
  .step_bar
    %ul.cp_stepflow01
      %li.completed
        会員情報
        %span.bubble
      %li.completed
        電話番号認証
        %span.bubble
      %li.active_step
        お届け先住所入力
        %span.bubble
      %li
        支払い方法
        %span.bubble
      %li
        完了
        %span.bubble>
.sign-up__main
  = form_for Address.new, url: new_user_path, method: :get do |f|
    .sign-up__main__header 
      %h2.sign-up__main__header__main-title 発送・お届け先住所入力
    .sign-up__main__body
      .sign-up__main__body__forms-container
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "お名前"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            %input.name{type: "text",placeholder: "例) 永野"}
            %input.name{type: "text",placeholder: "例) 芽郁"}
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "お名前カナ"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            %input.name{type: "text",placeholder: "例) ナガノ"}
            %input.name{type: "text",placeholder: "例) メイ"}
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "郵便番号"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            = f.text_field :post_number, class: "big", required: "true",placeholder: "例) 123-4567"
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "都道府県"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, class: "big"
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "市区町村"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            = f.text_field :city, class: "big", required: "true",placeholder: "例) 世田谷区若林"
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "番地"
          = f.label :name, "必須", class: "attention"
          .sign-up__main__body__forms-container__form-box__inner
            = f.text_field :address, class: "big", required: "true",placeholder: "例) ３-５-９８"
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "建物名"
          = f.label :name, "任意", class: "select"
          .sign-up__main__body__forms-container__form-box__inner
            = f.text_field :building_name, class: "big",placeholder: "例) 青山ハウス"
        .sign-up__main__body__forms-container__form-box
          = f.label :name, "電話番号"
          = f.label :name, "任意", class: "select"
          .sign-up__main__body__forms-container__form-box__inner
            = f.telephone_field :building_tel, class: "big",placeholder: "例) 090-1234-5678"
        .sign-up__main__body__forms-container__form-box
          = f.submit "次へ進む", class: "buttom1"

