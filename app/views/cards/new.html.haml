= render "modules/header"
%nav.bread-crumbs
  .bread-crumbs-box
    = link_to '/jp', class: "contents" do
      メルカリ
      = fa_icon 'angle-double-right'
    = link_to '/jp/mypage', class: "contents" do
      マイページ
      = fa_icon 'angle-double-right'
    = link_to '/jp/mypage/card/', class: "contents" do
      支払い方法
      = fa_icon 'angle-double-right'
    %span クレジットカード情報入力
.main-content
  = render "modules/mypage-sidebar"
  %section.l-chapter-container
    .l-chapter-head クレジットカード情報入力
    .l-single-inner.registration-form
      .l-single-content
        .form-group
        = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %label カード番号
          %span.form-require 必須
          %input.input-default{"data-input-type": "card", maxlength: "16", placeholder: "半角数字のみ", type: "text", number: "", id: "card_number"}/
          %ul.has-error-text
          %ul.signup-card-list
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3951034907')
            = image_tag ('https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3951034907')
          .form-group.signup-form-expire
            %label 有効期限
            %span.form-require 必須
            %br
          .select-wrap.half-main
            .select-wrap.half-1
              %select#exp_month{name: "exp_month", type: "text", class: "select-default"}
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %i.icon-arrow-bottom
              %span 月
            .select-wrap.half-2
              %select#exp_year{name: "exp_year", type: "text", class: "select-default"}
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %i.icon-arrow-bottom
              %span 年
            %ul.has-error-text
            %ul.has-error-text
          .form-group
            %label セキュリティコード
            %span.form-require 必須
            %input.input-default{placeholder: "カード背面4桁もしくは3桁の番号", id: "cvc", cvc: ""}/
            %ul.has-error-text
            .signup-seqcode
              .signup-seqcode-text
                %span.form-question
                カード裏面の番号とは？
              .signup-seqcode-info
                %br/
          #card_token
          %button.btn-default{id: "token_submit"} 追加する



= render "modules/sell-btn"
= render "modules/footer"

